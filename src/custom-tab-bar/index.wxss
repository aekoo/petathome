.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  background: white;
  box-shadow: 0 -4rpx 12rpx 0 rgba(0,0,0,0.06);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 2rpx;
  transform: scaleY(0.5);
  background-color: rgba(0, 0, 0, 0.1);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  position: relative;
  text-align: center;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item image {
  margin: 6rpx auto 4rpx;
  width: 52rpx;
  height: 52rpx;
}

.tab-bar-item view {
  flex: 1;
  font-size: 22rpx;
}
.tab-bar-item button {
  position: absolute;
  contain: '';
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
  opacity: 0;
}